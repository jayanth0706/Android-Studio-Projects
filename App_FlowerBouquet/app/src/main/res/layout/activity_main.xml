<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_6"
    >

    <TextView
        android:id="@+id/ftw1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Flower Bouquet"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        />

    <RadioGroup
        android:id="@+id/frg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ftw1">

        <RadioButton
            android:id="@+id/frb1"
            android:layout_width="205dp"
            android:layout_height="261dp"
            android:background="@drawable/img" />

        <RadioButton
            android:id="@+id/frb2"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:background="@drawable/img_3" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/frg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frg1"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/frb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Order"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/frb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="TakeAway"
            android:textSize="20dp"/>

    </RadioGroup>

    <CheckBox
        android:id="@+id/fcb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frg2"
        android:layout_marginTop="30dp"
        android:text="Agree And Continue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <Button
        android:id="@+id/fbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fcb1"
        android:text="Submit"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>