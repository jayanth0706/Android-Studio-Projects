<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Projects"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/project1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ptitle"
        android:text="Note making using MERN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/project1link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/project1"
        android:text="GitHub Link: https://github.com/jayanth0706/Note-making-using-MERN"
        android:autoLink="web"
        android:textColorLink="#0000FF" />

    <TextView
        android:id="@+id/project2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/project1link"
        android:text="Sales Analysis using Exploaratory Data Analysis"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/project2link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/project2"
        android:text="Link: https://github.com/jayanth0706/Sales-Analysis-FinalProject"
        android:autoLink="web"
        android:textColorLink="#0000FF" />

    <Button
        android:id="@+id/pbtn1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project2link"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Home"/>

</RelativeLayout>