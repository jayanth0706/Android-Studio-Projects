<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/htitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Hobbies"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/hobby1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/htitle"
        android:text="1. Playing Cricket"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="250dp"
        android:layout_height="175dp"
        android:src="@drawable/cric"
        android:layout_below="@+id/hobby1"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/hobby2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/img1"
        android:text="1. Travelling"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/img2"
        android:layout_width="250dp"
        android:layout_height="175dp"
        android:src="@drawable/tra"
        android:layout_below="@+id/hobby2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/hbtn1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img2"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Home"/>


</RelativeLayout>