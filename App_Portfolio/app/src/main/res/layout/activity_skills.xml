<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/stitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Skills"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/skill1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/stitle"
        android:text="1. Java Programming Language"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/con1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Skilled Java developer with object-oriented concepts, data structures, and algorithms as core competencies. Experienced in using Java SE to create stable applications and in using EE frameworks like Spring Boot and Hibernate to create large scale web services. Knowledgeable about multithreading, concurrency, with exceptions management to ensure smooth running of the code without errors."
        android:layout_below="@id/skill1"/>

    <TextView
        android:id="@+id/skill2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/con1"
        android:text="1. Exploratory Data Analysis"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/con2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="With a strong emphasis on data interpretation, analysis, and reporting in order to derive meaningful business insights, qualified for advanced exploratory data analysis (EDA). Familiar with a range of statistical and graphical techniques including Python (Pandas, NumPy, Matplotlib, Seaborn) and R to manipulate, re-organize and present large data files."
        android:layout_below="@id/skill2"/>

    <Button
        android:id="@+id/cbtn1"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/con2"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Home"/>


</RelativeLayout>