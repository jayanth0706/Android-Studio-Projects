<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ctitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Certifications"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/course1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ctitle"
        android:text="The Bits and Bytes of Computer Networking"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/course1link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/course1"
        android:text="Link: https://www.coursera.org/account/accomplishments/verify/7J5KKLE3FLYA"
        android:autoLink="web"
        android:textColorLink="#0000FF" />

    <TextView
        android:id="@+id/course2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/course1link"
        android:text="C for Everyone: Programming Fundamentals"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/course2link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/course2"
        android:text="Link: https://www.coursera.org/account/accomplishments/verify/2MVAHRU2A2ZR"
        android:autoLink="web"
        android:textColorLink="#0000FF" />

    <Button
        android:id="@+id/cbtn1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course2link"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Home"/>

</RelativeLayout>